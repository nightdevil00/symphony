/* Keybinds Viewer - Custom Config */

@import "~/.config/rofi/config.rasi"  

/* ---- Window ---- */
window {
  width: 700px;
  height: inherit;
}

/* ---- Mainbox ---- */
mainbox {
  children: [ "inputbar", "listview" ];
}

/* ---- Entry ---- */
entry {
  width: inherit;
  placeholder: "ðŸ”Ž Search keybinds";
}

/* ---- Listview ---- */
listview {
  columns: 1;
  lines: 12;
  fixed-height: true;
  spacing: 4px;
  cycle: true;
  scrollbar: false;
}

/* ---- Elements ---- */
element {
  orientation: horizontal;
  padding: 6px 10px;
}

element-icon {
  size: 0%;
}

element-text {
  horizontal-align: 0.0;
  vertical-align: 0.5;
  margin: 0px;
  padding: 0px;
  font: "CaskaydiaCove Nerd Font Mono 11";
}
