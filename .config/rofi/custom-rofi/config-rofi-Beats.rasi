/* Rofi Beats Config */

@import "~/.config/rofi/config.rasi" 

/* ---- Window ---- */
window {
  width: inherit;
  height: inherit;
}

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "listview"];
}

/* ---- Entry ---- */ 
entry {
  placeholder: "ðŸ“» Choose Media or Stations to play";
}

/* ---- Listview ---- */
listview {
  columns: 2;
  lines: 7;
  fixed-height: false;
  margin: 10px;
  scrollbar: false;
  spacing: 8px;
  cycle: true;
}

/* ---- Elements ---- */
element {
  orientation: horizontal;
  padding: 10px 15px;
  border-radius: 6px;
}

element-icon {
  size: 0%;
}

element-text {
  horizontal-align: 0.0;
  vertical-align: 0.5;
  margin: 0px;
  padding: 0px;
}
