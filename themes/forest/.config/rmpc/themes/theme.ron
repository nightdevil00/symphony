// Symphony by vyrx
// Theme: Forest
// https://github.com/vyrx-dev

#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    default_album_art_path: None,
    show_song_table_header: false,
    draw_borders: true,
    browser_column_widths: [20, 38, 42],
    text_color: "#d5e8d5",
    tab_bar: (
        enabled: true,
        active_style: (fg: "#d5e8d5", bg: "#020802", modifiers: "Bold"),
        inactive_style: (fg: "#638663", modifiers: ""),
    ),
    highlighted_item_style: (fg: "#5fb35b", modifiers: "Bold"),
    current_item_style: (fg: "#020802", bg: "#5fb35b", modifiers: "Bold"),
    borders_style: (fg: "#638663", modifiers: ""),
    highlight_border_style: (fg: "#5fb35b"),
    symbols: (song: "󰝚 ", dir: " ", marker: "* ", ellipsis: "..."),
    progress_bar: (
        symbols: ["█", "█", "█"],
        track_style: (fg: "#638663"),
        elapsed_style: (fg: "#5fb35b"),
        thumb_style: (fg: "#5fb35b"),
    ),
    scrollbar: (
        symbols: ["", "", "", ""],
        track_style: (fg: "#638663"),
        ends_style: (fg: "#638663"),
        thumb_style: (fg: "#5fb35b"),
    ),
    song_table_format: [
        (
            prop: (kind: Property(Title), style: (fg: "#d5e8d5"),
                highlighted_item_style: (fg: "#020802", modifiers: "Bold"),
                default: (kind: Property(Filename), style: (fg: "#638663"),)
            ),
            width: "70%",
        ),
        (
            prop: (kind: Property(Album), style: (fg: "#638663"),
                default: (kind: Text("Unknown Album"), style: (fg: "#638663"))
            ),
            width: "30%",
        ),
    ],
    layout: Split(
        direction: Vertical,
        panes: [
            (
                size: "3",
                pane: Pane(Tabs),
            ),
            (
                size: "4",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            pane: Split(
                                direction: Vertical,
                                panes: [
                                    (
                                        size: "4",
                                        borders: "ALL",
                                        pane: Pane(Header),
                                    ),
                                ]
                            )
                        ),
                    ]
                ),
            ),
            (
                size: "100%",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            borders: "NONE",
                            pane: Pane(TabContent),
                        ),
                    ]
                ),
            ),
            (
                size: "3",
                borders: "TOP | BOTTOM",
                pane: Pane(ProgressBar),
            ),
        ],
    ),
    header: (
        rows: [
            (
                left: [
                    (kind: Property(Status(StateV2(playing_label: " ", paused_label: "❚❚", stopped_label: "❚❚"))), style: (fg: "#5fb35b", modifiers: "Bold")),
                ],
                center: [
                    (kind: Property(Song(Title)), style: (fg: "#d5e8d5", modifiers: "Bold"),
                        default: (kind: Property(Song(Filename)), style: (fg: "#d5e8d5", modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Text("Vol: "), style: (fg: "#5fb35b", modifiers: "Bold")),
                    (kind: Property(Status(Volume)), style: (fg: "#5fb35b", modifiers: "Bold")),
                    (kind: Text("% "), style: (fg: "#5fb35b", modifiers: "Bold"))
                ]
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed)), style: (fg: "#d5e8d5")),
                    (kind: Text("/"), style: (fg: "#638663")),
                    (kind: Property(Status(Duration)), style: (fg: "#d5e8d5")),
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "#c8d556", modifiers: "Bold"),
                        default: (kind: Text("Unknown Artist"), style: (fg: "#638663", modifiers: ""))
                    ),
                ],
                right: [
                    (
                        kind: Property(Widget(States(
                            active_style: (fg: "#5fb35b", modifiers: "Bold"),
                            separator_style: (fg: "#638663")))
                        ),
                        style: (fg: "#638663")
                    ),
                ]
            ),
        ],
    ),
    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)),
                (kind: Text(" ")),
            ])
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")),
                (kind: Property(Title)),
            ]),
            default: (kind: Property(Filename))
        ),
    ],
)
